<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HankCollections.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:HankCollections.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="HankCollections">

    <TabBar CurrentItem="{x:Reference HomePage}">
        <Tab Title="Home">
            <ShellContent x:Name="HomePage" ContentTemplate="{DataTemplate pages:MainPage}" />
        </Tab>
        <Tab Title="Settings">
            <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}" />
        </Tab>
    </TabBar>

</Shell>
